<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.navigation.activities.MainActivity"
    android:background="#71C3AE"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20px"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="669dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/Return"
                android:layout_width="131dp"
                android:layout_height="55dp"
                android:layout_gravity="start|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:backgroundTint="#5E9987"
                android:drawableLeft="@drawable/arrow_back_24"
                android:text="Return"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="192dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/baseline_account_circle_24" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:hint="Name"
                android:padding="20dp"
                android:textColorHint="#674FA3"
                android:textSize="9sp" />

            <EditText
                android:id="@+id/LastName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:hint="Last Name"
                android:padding="20dp"
                android:textColorHint="#674FA3"
                android:textSize="9sp" />

            <EditText
                android:id="@+id/MailAccount"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:hint="Mail Account"
                android:padding="20dp"
                android:textColorHint="#674FA3"
                android:textSize="9sp" />

            <EditText
                android:id="@+id/MailPassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:hint="Password"
                android:padding="20dp"
                android:textColorHint="#674FA3"
                android:textSize="9sp" />

            <EditText
                android:id="@+id/StationAddress"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:hint="Station Address"
                android:padding="20dp"
                android:textColorHint="#674FA3"
                android:textSize="9sp" />

            <EditText
                android:id="@+id/StationMapLocation"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:hint="Station Map Location"
                android:padding="20dp"
                android:textColorHint="#674FA3"
                android:textSize="9sp" />

            <Button
                android:id="@+id/Register"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangular_whitbackgraund"
                android:backgroundTint="#5E9987"
                android:text="Register"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>