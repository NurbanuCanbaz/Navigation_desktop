<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.navigation.ProfilePage"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="#efe7da"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|left"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#88B29079"
            android:drawableLeft="@drawable/arrow_back_24"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40px" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:backgroundTint="#EFEFEF"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="60px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|left"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:background="@drawable/background_icon"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_8sdp" />
        <TextView
            android:id="@+id/textName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#5c0017"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
             />


    </LinearLayout>

    <Button

        android:layout_marginTop="20dp"
        android:id="@+id/Attendence"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="#EFEFEF"
        android:text="Attendance"
        android:textColor="#000000"
        android:drawableLeft="@drawable/baseline_alarm_on_24"
        />


    <Button
        android:id="@+id/ChangeAddress"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="#EFEFEF"
        android:text="Address"
        android:textColor="#000000"
        android:drawableLeft="@drawable/baseline_location_off_24"
        />

    <Button
        android:id="@+id/Payment"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="#EFEFEF"
        android:text="Payment"
        android:textColor="#000000"
        android:drawableLeft="@drawable/baseline_payment_24"

        />

    <Button
        android:id="@+id/EditProfile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="135px"
        android:text="Edit Profile"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#6E260E"/>



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSignOut"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/background_icon"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="#88B29079" />



</LinearLayout>