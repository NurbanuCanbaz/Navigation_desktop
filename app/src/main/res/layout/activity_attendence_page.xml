<!-- activity_attendance.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendencePage"
    android:background="#efe7da">



    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#EFEFEF"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Attendance"
            android:textColor="#000000"
            android:textSize="60px" />



    <!-- CalendarView for selecting desired days -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp" />

    <!-- CheckBox for "Absent" option -->
    <CheckBox
        android:id="@+id/checkBoxAbsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark as Absent"
        android:layout_below="@id/calendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Button to confirm changes -->
    <Button
        android:id="@+id/btnConfirmChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Changes"
        android:backgroundTint="#88B29079"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp" />

</RelativeLayout>